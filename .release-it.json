{
  "npm": {
    "publish": true,
    "ignoreVersion": false
  },
  "git": {
    "commitMessage": "chore(release): v${version}",
    "commit": true,
    "tag": true,
    "tagName": "v${version}",
    "push": false
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    },
    "@release-it-plugins/workspaces": {
      "publish": false
    }
  }
}
